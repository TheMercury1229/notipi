# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/notipi

# Upstash Redis Configuration (Get from https://console.upstash.com/)
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
# For BullMQ (use Redis protocol URL from Upstash console)
REDIS_URL=rediss://default:your-password@your-redis-endpoint.upstash.io:6379

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=NotiPi
SMTP_FROM_EMAIL=your-email@gmail.com

# Queue Configuration
QUEUE_NAME=email-queue
QUEUE_CONCURRENCY=5

# Rate Limiting Configuration (generous limits)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PER_USER_MAX=50
RATE_LIMIT_BULK_EMAIL_MAX=20
